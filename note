  function startAnimation() {
    var numberContainer = document.querySelector('.persenHTML');
    var currentNumber = parseFloat(numberContainer.textContent);
    var targetNumber = 22.3;
    var duration = 100;
    var interval = 10;
    var steps = Math.ceil(duration / interval);
    var increment = (targetNumber - currentNumber) / steps;

    var counter = setInterval(function() {
      currentNumber += increment;
      numberContainer.textContent = currentNumber.toFixed(2);
      
      if (currentNumber >= targetNumber) {
        clearInterval(counter);
      }
    }, interval);
}
  
